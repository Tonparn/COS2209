@page "/register"
@layout MainLayout
@inherits RegisterModel

@if (UserState.IsLoggedIn)
{
    UriHelper.NavigateTo("/");
}

<div class="register">
    <div class="container position">
        <div class="row">
            <div class="col-md-8 m-auto">

                <h1 class="display-4 text-center">Sign Up</h1>
                <p class="lead text-center">Create your DataCloning.io account</p>

                <EditForm Model="@RegisterDetails" OnValidSubmit="@(async () => await Register())">
                    <DataAnnotationsValidator />
                    <div class="form-group">
                        <small className="form-text text-muted">Display Name</small>
                        <input type="text" bind=@RegisterDetails.Name placeholder="Name" class="form-control form-control-lg" />
                    </div>
                    <div class="form-group">
                        <input type="email" bind=@RegisterDetails.Email placeholder="Email" class="form-control form-control-lg" />
                    </div>
                    <div class="form-group">
                        <input type="password" bind=@RegisterDetails.Password placeholder="Password" class="form-control form-control-lg" />
                    </div>
                    <div class="form-group">
                        <input type="password" bind=@RegisterDetails.Password2 placeholder="Password2" class="form-control form-control-lg" />
                    </div>
                    <button id="load" type="submit" class="btn btn-info btn-block mt-4">Submit</button>
                    <hr />
                    
                    <ValidationSummary />
                </EditForm>
                <hr />

                @if (ShowRegisterFailed)
                {
                    <div class="alert alert-danger" style="color:red">
                        @ShowStatus
                    </div>
                }
            </div>
        </div>
    </div>
</div>